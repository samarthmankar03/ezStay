<% layout("layouts/boilerplate") %> 
<body>
    <div class="row row-cols-1 row-cols-lg-5 row-cols-md-3 g-4">
        <% for(list of allListings) { %>     
            <div class="col">
                <a href="/listings/<%= list._id %>" class="card-link" >
                    <div class="card listing-card h-100">
                    <img src="<%= list.image.url %>" class="card-img-top" alt="listing-image">
                    <div class="card-body">
                        <h5 class="card-title"><%= list.title %></h5>
                        <p class="card-text">&#8377;<%= list.price.toLocaleString("en-IN") %> /night</p>
                    </div>
                    </div>
                </a> 
            </div>
        <% } %>
    </div>
</body>